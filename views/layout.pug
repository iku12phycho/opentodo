        li.nav-item.px-2.mx-1
          a(href="/").btn.btn-outline-light ALL TASKS 
        if user 
          li.nav-item.px-2.mx-1
            a(href="/tasks/my_task").btn.btn-outline-light MY TASKS 
          li.nav-item.px-2.mx-1
            a(href="/users/logout").btn.btn-outline-light SIGN OUT 
        else 
          li.nav-item.px-2.mx-1
            a(href="/users/login").btn.btn-outline-light SIGN IN 
